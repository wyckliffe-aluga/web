<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
    <script src="https://kit.fontawesome.com/e72a3b263a.js" crossorigin="anonymous"></script>

    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>

            <main>
                <% if (groups.length > 0) { %>
                    <div class="grid">
                        <% for (let group of groups) { %>
                            <article class="card product-item">
                                <header class="card__header">
                                    <h3 class="product__title">
                                        <%= group.name %>
                                    </h3>
                                </header>
                                <div class="card__content">
                                    <h5 class="product__description"><%= group.district %></h5>
                                    <h4 class="product__price"> Account No: <%= group.accountNo %></h4>
                                    <h4 class="product__price"> Account Bal: Ksh <%= group.accountBal %></h4>
                                </div>
                                <div class="card__actions">
                                    <input type="hidden" value="<%= group._id %>" name="groupId">
                                    <a href="/admin/add-farmer/<%= group._id %>" class="btn"><i class="fas fa-user-plus"></i></a>
                                    <a href="/admin/group-detail/<%= group._id %>" class="btn"><i class="fas fa-info"></i></a>
                                    <a href="/admin/edit-group/<%= group._id %>?edit=true" class="btn"><i class="far fa-edit"></i></a>
                                    <form action="/admin/delete-group" method="POST">
                                        <input type="hidden" value="<%= group._id %>" name="groupId">
                                        <input type="hidden" name="_csrf" value="<%= csrftoken %>">
                                        <button class="btn" type="submit"><i class="fas fa-trash-alt"></i></button>
                                    </form>
                               
                                </div>
                            </article>
                            <% } %>
                    </div>
                    <% } else { %>
                        <h1>No Groups Found!</h1>
                        <% } %>
            </main>
            <%- include('../includes/end.ejs') %>