<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <form class="product-form" action="/admin/<% if (editing) { %>edit-group<% } else { %>add-group<% } %>" method="POST">
            <div class="form-control">
                <label for="name">Name</label>
                <input type="text" name="name" id="name" value="<% if (editing) { %><%= group.name %><% } %>">
            </div>
            <div class="form-control">
                <label for="district">District</label>
                <input type="text" name="district" id="district" value="<% if (editing) { %><%= group.district %><% } %>">
            </div>
            <div class="form-control">
                <label for="description">Description</label>
                <textarea name="description" id="description" rows="5"><% if (editing) { %><%= group.description %><% } %></textarea>
            </div>
            <% if (editing) { %>
                <input type="hidden" value="<%= group._id %>" name="groupId">
            <% } %>
            <input type="hidden" name="_csrf" value="<%= csrftoken %>">
            <button class="btn" type="submit"><% if (editing) { %>Update Group<% } else { %>Add Group<% } %></button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>

