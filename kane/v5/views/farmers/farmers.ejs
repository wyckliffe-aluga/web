<%- include('../includes/head.ejs') %>
    <script src="https://kit.fontawesome.com/e72a3b263a.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    </head>

    <body class="hm-gradient">
        <%- include('../includes/navigation.ejs') %>
            <div class="container mt-4">

                <div class="card mb-4">
                    <div class="card-body">
                        <!-- Grid row -->
                        <div class="row">
                            <!-- Grid column -->
                            <div class="col-md-12">
                                <h2 class="pt-3 pb-4 text-center font-bold font-up deep-purple-text">Farmers</h2>
                                <div class="input-group md-form form-sm form-2 pl-0">
                                    <input class="form-control my-0 py-1 pl-3 purple-border" type="text" placeholder="Search farmers here..." aria-label="Search">
                                    <span class="input-group-addon waves-effect purple lighten-2" id="basic-addon1"><a><i class="fa fa-search white-text" aria-hidden="true"></i></a></span>
                                </div>
                            </div>
                            <!-- Grid column -->
                        </div>
                        <!-- Grid row -->
                        <!--Table-->
                        <table class="table table-striped">
                            <!--Table head-->
                            <thead>
                                <tr>
                                    <th>Group No</th>
                                    <th>First Name</th>
                                    <th>Last Name</th>
                                    <th>Phone No</th>
                                    <th>Location</th>
                                    <th>Farmsize (acres)</th>
                                    <th>Account Bal Ksh</th>
                                </tr>
                            </thead>
                            <!--Table head-->
                            <!--Table body-->
                            <tbody>
                                <% if (farmers.length > 0) { %>
                                    <% farmers.forEach(farmer => {  %>
                                        <tr>
                                            <th scope="row"><%=farmer.groupAccountNo %></th>
                                            <td><%=farmer.firstName %></td>
                                            <td><%=farmer.lastName %></td>
                                            <td>0<%=farmer.phoneNumber %></td>
                                            <td><%=farmer.location %></td>
                                            <td><%=farmer.farmSize %></td>
                                            <td><%=farmer.balance %></td>
                                        </tr>
                                   <% }) %>
                                <% } %>
                            </tbody>
                            <!--Table body-->
                        </table>
                        <!--Bottom Table UI-->
                        <div class="d-flex justify-content-center">
                            <!--Pagination -->
                            <nav class="my-4 pt-2">
                                <ul class="pagination pagination-circle pg-blue mb-0">
                                    <!--First-->
                                    <li class="page-item disabled clearfix d-none d-md-block"><a class="page-link">First</a></li>
                                    <!--Arrow left-->
                                    <li class="page-item disabled">
                                        <a class="page-link" aria-label="Previous">
                                                <span aria-hidden="true">&laquo;</span>
                                                <span class="sr-only">Previous</span>
                                            </a>
                                    </li>
                                    <!--Numbers-->
                                    <li class="page-item active"><a class="page-link">1</a></li>
                                    <!--Arrow right-->
                                    <li class="page-item">
                                        <a class="page-link" aria-label="Next">
                                                <span aria-hidden="true">&raquo;</span>
                                                <span class="sr-only">Next</span>
                                            </a>
                                    </li>
                                    <!--First-->
                                    <li class="page-item clearfix d-none d-md-block"><a class="page-link">Last</a></li>
                                </ul>
                            </nav>
                            <!--/Pagination -->
                        </div><!--Table-->
                    </div>
                </div>
                <hr class="my-4">
            </div>   
            <main>
            
            </main>
            <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
            <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
            
            <%- include('../includes/end.ejs') %>